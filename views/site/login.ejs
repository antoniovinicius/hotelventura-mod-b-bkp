<%- include('page-header') -%>

<div class="gtco-section">
	<div class="gtco-container">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-6 animate-box">

					<% if (typeof success === 'string') { %>
                    <div class="alert alert-success" role="alert">
                        <%=success%>
                    </div>
                    <% } %>
                    <% if (typeof error === 'string') { %>
                    <div class="alert alert-danger" role="alert"> <strong>Ops!</strong> <%=error%>
                    </div>
                    <% } %>

					<h3>Login</h3>
					<form action="/login" method="POST">
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="email">E-mail</label>
								<input type="text" name="email" id="email" class="form-control" placeholder="E-mail para login" value="<%=body.email%>">
							</div>
						</div>
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="email">Senha</label>
								<input type="password" name="senha" id="senha" class="form-control" placeholder="Senha" value="<%=body.senha%>">
							</div>
						</div>
						<div class="form-group">
							<input type="submit" value="Logar" class="btn btn-primary">
						</div>
					</form>   
                    <span>Ainda n√£o possui cadastro?</span><br>
                        <input type="submit" value="Criar Cadastro" class="btn btn-primary">
                        <input type="submit" value="Criar Cadastro com Google" class="btn btn-primary">           
				</div>
                
			</div>
		</div>
	</div>
</div>

<%- include('page-footer') -%>